<template>
  <view class="column goods-grid-box">
    <view class="grid-discount-box row" wx:if="{{goods.discount}}">
      <icon class="vip xsmall" color="white" /><text> 会员{{goods.discountRate}}</text>
    </view>
    <!--图片-->
    <view>
      <image class="goods-image" lazy-load src="{{goods.imageUrl}}" @tap="routeToGoods({{goods.id}})"></image>
    </view>
    <view class="goods-title" @tap="routeToGoods({{goods.id}})">
      <text wx:if="{{goods.isGoodsName}}">{{goods.name}}</text>
    </view>
    <view>
    </view>
    <view class="row-between" wx:if="{{goods.isSales || goods.isPrice || goods.isCart}}">
      <view class="content-box column" wx:if="{{goods.isSales || goods.isPrice}}">
        <view class="row sale-tag-box">
          <text class="xs muted" wx:if="{{goods.isSales}}">已售{{goods.salesVolume}}件</text>
          <block wx:for="{{goods.tags}}" wx:key="index" wx:index="index" wx:for-item="item">
            <text wx:if="{{item.isShow}}" class="xxs primary tag-box ml10">{{item.tag}}</text>
          </block>
        </view>
        <view class="row" wx:if="{{goods.isPrice}}">
          <text class="major lg" >￥{{goods.priceLable}}</text>
          <text class="cancel ml10" wx:if="{{goods.discount}}">￥{{goods.originalPrice}}</text>
        </view>
      </view>
      <!--预约按钮-->
      <view wx:if="{{goods.type == 'service'}}">
        <block>
          <text class="service-box sm" wx:if="{{goods.totalStock > 0}}" @tap.stop="service({{goods.id}})">预约</text>
          <text class="sm muted" wx:else>已售罄</text>
        </block>
      </view>

      <!--虚拟商品按钮-->
      <view wx:elif="{{goods.type == 'digit'}}">
        <block>
          <icon class="plus normal" wx:if="{{goods.totalStock > 0}}" @tap.stop="digit({{goods.id}})" />
          <text class="sm muted" wx:else>已售罄</text>
        </block>
      </view>

      <!--加入购物车按钮-->
      <view wx:else>
        <block wx:if="{{goods.isCart || goods.isCart == null}}">
          <icon class="plus normal" wx:if="{{goods.totalStock > 0}}" @tap.stop="handlePlusCart({{goods}})" />
          <text class="sm muted" wx:else>已售罄</text>
        </block>
      </view>

    </view>
  </view>
</template>

<script>
  import wepy from 'wepy';
  import router from '../../../mixins/router';
  export default class GoodGridItem extends wepy.component {
    props = {
      goods: {}
    };
    methods = {
      service (id) {
        this.$root.$navigate(`/pages/goods/detail?goodsId=${id}`)
      },
      digit (id) {
        this.$root.$navigate(`/pages/goods/detail?goodsId=${id}`)
      }
    };
    mixins = [router]
  }
</script>

