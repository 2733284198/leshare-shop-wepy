<template>
  <Loading :init.sync="init"/>

  <view wx:if="{{init}}">

    <view class="column">
      <block wx:for="{{page.list}}" wx:key="index" wx:index="index" wx:for-item="item">

        <!--顶栏/基本信息-->
        <view class="order-item-container column">
          <view class="order-header-container colunm">
            <view class="row-between">
              <view class="row">
                <image src="{{item.customer.avatarUrl}}" class="avatar-box"/>
                <text class="ml10 sm">{{item.customer.nickName}}</text>
              </view>
              <text class="sm primary" wx:if="{{item.statusText}}">{{item.statusText}}{{item.paymentType == 0 ? '(线下支付)' : ''}}{{item.tableNum ? '(' + item.tableNum + '桌)': ''}}</text>
            </view>
            <view class="order-info-container row-between">
              <text>{{item.orderTime}}</text>
              <text>{{item.uuid}}</text>
            </view>
          </view>

          <!--商品区域-->
          <view class="order-goods-list-container" @tap="detail({{item.orderId}})">
            <repeat for="{{item.orderGoodsInfos}}" key="goodsId" index="index" item="infoItem">
              <view class="{{!item.orderId || index == 0 || expand[item.orderId] ? '' : 'order-goods-fold'}}">
                <OrderGoods :goods="infoItem"></OrderGoods>
                <view class="hr" />
              </view>
            </repeat>
            <view wx:if="{{item.orderId && item.orderGoodsInfos.length > 1}}" class="goods-fold-btn row-center" @tap.stop="expand({{item.orderId}})">
              <text class="muted" wx:if="{{!expand[item.orderId]}}">查看全部 {{item.orderGoodsInfos.length}} 件商品</text>
              <text class="muted" wx:else>收起商品</text>
            </view>
          </view>


          <!--汇总信息-->
          <view class="order-footer-container row-end">
            <text class="mr20">共{{item.orderGoodsInfos.length}}件商品</text>
            <text>合计:</text>
            <text class="major xl mr20">￥{{item.finalPrice}}</text>
            <text>(含运费￥{{item.postFee}})</text>
          </view>

          <!--佣金栏-->

          <view class="row-between cash-box">
            <view class="row">
              <view class="row">
                <image src="{{item.customer.avatarUrl}}" class="avatar-box"/>
                <text class="ml10 sm">{{item.customer.nickName}}</text>
              </view>
            </view>
            <view class="row">
              <text>佣金:</text>
              <text class="major xl mr20">￥{{item.finalPrice}}</text>
              <button class="weui-btn btn-box" type="primary" @tap="orderDetail({{item}})">明细</button>
            </view>
          </view>
        </view>
      </block>
    </view>

    <!-- 加载提示 -->
    <Loadmore :page.sync="page"/>

  </view>

  <!--占位符-->
  <Placeholder :show.sync="isPageEmpty" message="您还没有相关分销订单信息"/>
</template>

<script>
  import wepy from 'wepy'
  import base from '../../mixins/base';
  import pagination from '../../mixins/pagination.wpy';
  import Placeholder from '../../components/common/placeholder';
  import Loadmore from '../../components/weui/loadmore';
  import Loading from '../../components/common/loading';
  import agent from '../../api/agent';
  import OrderGoods from '../../components/order/order_goods';

  export default class Singular extends wepy.page {
    data = {
      init: false,
      page: {},
      expand: {},
      id: null
    };
    async onLoad ({id}) {
      this.page = await agent.agentOrder(id);
      this.id = id;
      await this.next();
    }
    methods = {
      /**
       * 商品展开收缩
       */
      expand(orderId) {
        orderId = orderId == null ? 0 : orderId;
        this.expand[orderId] = !this.expand[orderId];
      },
      /**
       * 订单详情
       */
      detail(orderId) {
        if (this.action == 0) {
          return;
        }
        this.$root.$navigate(`/pages/order/detail?orderId=${orderId}`);
      },
      orderDetail(order) {
        this.$preload('detail', order.orderGoodsInfos);
        this.$navigate(`/pages/agent/order_detail`)
      }
    };
    computed = {};
    components = {
      Placeholder: Placeholder,
      Loadmore: Loadmore,
      Loading: Loading,
      OrderGoods: OrderGoods
    };
    mixins = [base, pagination];
    config = {
      navigationBarTitleText: '分销订单',
      enablePullDownRefresh: true
    };
  }
</script>

