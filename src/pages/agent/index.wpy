<template>
  <view wx:if="{{init}}">
    <view class="column information-box" >
      <view class="row top-box">
        <image class="mr20" src="{{detail.customer.avatarUrl}}" style="width: 60px;height:60px;"/>
        <text class="lg">推荐人：{{reference}}</text>
      </view>
      <view class="column money-box">
        <view class="row-between">
          <view class="column">
            <text class="lg">可提现佣金</text>
            <text class="mt20 lg">{{detail.balance}}元</text>
          </view>
          <button @tap="open({{detail.id}})">提现</button>
        </view>
        <view class="column">
          <text class="mt20 lg">已提现佣金</text>
          <text class="mt20 lg">{{detail.cash}}元</text>
        </view>
      </view>
    </view>
    <view class="column content-box">
      <view class="row-between row-box" wx:for="{{list}}" wx:for-index="columnIndex" wx:for-item="column" wx:key="columnIndex">
        <view class="column-center column-box" wx:for="{{column}}" wx:for-index="rowIndex" wx:for-item="row" wx:key="rowIndex" @tap="action({{row.icon}}, {{detail.id}})">
          <icon class="{{row.icon}}" style="color: {{row.color}};font-size: 25px;line-height: 25px;" />
          <text class="lg mb10">{{row.title}}</text>
          <view class="row number-box">
            <text class="lg" style="color: #FF4544">{{row.num}}</text><text class="lg">{{row.unit}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <Cash @cash.user="cash"/>

  <Copyright buttom="true" />
</template>

<script>
  import wepy from 'wepy';
  import { connect } from 'wepy-redux';
  import store from '../../store/utils';
  import base from '../../mixins/base';
  import tips from '../../utils/Tips';
  import Copyright from '../../components/common/copyright';
  import Cash from '../../components/agent/cash'
  import agent from '../../api/agent'

  @connect({
    shop: store.get('shop')
  })
  export default class Agent extends wepy.page {
    data = {
      init: false,
      reference: '分销员1',
      list: [
        [
          {
            icon: 'recharge',
            title: '分销佣金',
            color: '#DABC69',
            num: 0,
            unit: '元'
          },
          {
            icon: 'singular',
            title: '分销订单',
            color: '#37B1D7',
            num: 0,
            unit: '单'
          },
          {
            icon: 'cash',
            title: '提现明细',
            color: '#FF4544',
            num: 0,
            unit: '元'
          }
        ],
        [
          {
            icon: 'groups',
            title: '我的团队',
            color: '#F59150',
            num: 0,
            unit: '个'
          },
          {
            icon: 'qrcode',
            title: '推广二维码',
            color: '#8DD38A',
            num: ''
          },
          {
            icon: 'clientele',
            title: '我的客户',
            color: '#DABC69',
            num: 0,
            unit: '个'
          }
        ]
      ],
      check: true,
      detail: null,
      agentId: 0
    };
    async onLoad () {
      this.load();
      this.loaded();
    };
    async load() {
      this.detail = await agent.agentInfo();
      const {recharge, cash, balance} = this.detail;
      this.detail.recharge = recharge.toFixed(2);
      this.detail.cash = cash.toFixed(2);
      this.detail.balance = balance.toFixed(2);
      this.list.forEach(listItem => {
        listItem.forEach(item => {
          for (let key in this.detail) {
            if (key === item.icon) {
              item.num = this.detail[key]
            }
          }
        })
      });
      this.$apply();
    }
    methods = {
      tips() {
        tips.success('敬请期待');
      },
      close() {
        this.check = false;
      },
      action(name, id) {
        this.$navigate(`/pages/agent/${name}`, {id: id})
      },
      open (id) {
        this.$invoke('Cash', 'open', {id: id});
      },
      cash() {
        this.load()
      }
    };
    components = {
      Copyright: Copyright,
      Cash: Cash
    };
    mixins = [base];
    config = {
      navigationBarTitleText: '分销中心',
      navigationBarBackgroundColor: '#fff',
      navigationBarTextStyle: 'black'
    };
  }
</script>

