<template>
  <view class="container" wx:if="{{init}}">

    <!-- 店铺信息区域 -->
    <ShopHeader :shop.sync="shop" />

    <!--功能区域-->
    <HomeNav badegText="我的" title="我的订单"  navText="返回" navType="navigateBack"/>
    <CouponNav title="优惠券"  :navText.sync="couponsNum" navUrl="../coupon/list" last="true" navType="navigate"/>

    <view class="mt10">
      <!--列表展现-->
      <repeat for="{{page.list}}" key="index" index="index" item="item">
          <OrderItem :order.sync="item" @tap.user="detail"></OrderItem>
      </repeat>
    </view>

    <!-- 加载提示 -->
    <Loadmore :page.sync="page"/>
  </view>

  <!--占位符-->
  <Placeholder :show.sync="isPageEmpty" message="您还没有相关公告信息"/>
</template>

<script>
  import wepy from 'wepy';
  import base from '../../mixins/base';
  import shop from '../../api/shop';
  import order from '../../api/order';
  import coupons from '../../api/coupon';
  import pagination from '../../mixins/pagination.wpy';
  import Placeholder from '../../components/common/placeholder';
  import ShopHeader from '../../components/shop/header';
  import ShopNav from '../../components/shop/nav';
  import Loadmore from '../../components/weui/loadmore';
  import OrderItem from '../../components/order/customer_item';
  import Event from '../../utils/Event';

  export default class OrderList extends wepy.page {
    def = {
      init: false,
      page: {
        list: [
          {orderGoodsInfos: []}
        ]
      },
      shop: {
        notices: []
      },
      couponsNum: '0张'
    }
    data = {...this.def};
    async onLoad () {
      // 加载店铺信息
      this.shop = await shop.info();
      this.shop.notices = await shop.notices();
      this.page = order.page();
      const ownCoupons = await coupons.own();
      this.couponsNum = ownCoupons.length + '张';
      await this.next();
      // 监听更新事件
      Event.listen(Event.ORDER_LIST_UPDATE, this.update.bind(this), this);
    };
    methods = {

    }
    events = {};
    components = {
      Placeholder: Placeholder,
      Loadmore: Loadmore,
      ShopHeader: ShopHeader,
      HomeNav: ShopNav,
      CouponNav: ShopNav,
      OrderItem: OrderItem
    };
    mixins = [base, pagination];
    config = {
      navigationBarTitleText: '我的记录',
      enablePullDownRefresh: true
    };
  }
</script>
